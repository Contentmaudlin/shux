CAMLC=ocamlc
BACKEND=../backend
#OBJS=scanner.cmo parser.cmo
OBJS=scanner.cmo
#EXT_OBJS=$(BACKEND)/semantics.cmo
EXT_OBJS=
INCLUDE=-I ../include -I $(BACKEND)
OCAML_FLAGS=$(INCLUDE) $(EXT_OBJS)

all : $(OBJS) $(TARGETS) $(TESTS)

%: %.ml $(OBJS)
	$(CAMLC) $(OCAML_FLAGS) -o $@ $(LIBS) $(OBJS) $<

scanner.ml: scanner.mll
	ocamllex scanner.mll

#parser.ml parser.mli: parser.mly
#	ocamlyacc parser.mly

#automata: parser.mly
#	ocamlyacc -v parser.mly

%.cmo: %.ml
	ocamlc $(OCAML_FLAGS) -c $<
%.cmi: %.mli
	ocamlc $(OCAML_FLAGS) -c $<
.PHONY: clean test

clean:
	rm -rf *.cmo *.cmi parser.mli parser.ml parser.output scanner.ml

